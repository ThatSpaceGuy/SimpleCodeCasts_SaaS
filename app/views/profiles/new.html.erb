<div class="row">
    <div class="col-md-g col-md-offset-3">
        <h1 class="text-center" style="color:#e0e0e0">Create Your Profile</h1>
        <p class="text-center" style="color:#e0e0e0">Be a part of the community and fill out your profile!</p>
        <div class="well">
            <%= form_for @profile, url: user_profile_path do |f| %>
                <div class="form-group">
                    <%= f.label :first_name %>
                    <%= f.text_field :first_name, class: 'form-control' %>
                </div>
                <div class="form-group">
                    <%= f.label :last_name %>
                    <%= f.text_field :last_name, class: 'form-control' %>
                </div>
                <div class="form-group">
                    <%= f.label :mercy_team %> -- Mercy Teams are based on Time Zones - choose your Time Zone below!
                    <%= f.select :mercy_team, ['Hawaiian', 'Alaskan', 'Pacific', 'Mountain', 'Central', 'Eastern', 'Atlantic'], {},class: 'form-control' %>
                </div>
                <div class="form-group">
                    <%= f.label :contact_email %>
                    <%= f.text_field :contact_email, class: 'form-control' %>
                </div>
                <div class="form-group">
                    <%= f.label :description %>
                    <%= f.text_area :description, class: 'form-control' %>
                </div>
                <div class="form-group">
                    <%= f.submit "Update Profile", class: 'btn btn-primary' %>
                </div>
            <% end %>
        </div>
    </div>
</div>